
public class Main {

	public static void main(String[] args) {
		
		Hamburger hamburger=new Hamburger("Basic", "Sausage", 3.5, "White");
		//double price=hamburger.itemizeHamburger();
		hamburger.addHamburgerAddition1("Tomato", 0.35);
		hamburger.addHamburgerAddition2("Lettuce", 0.25);
		hamburger.addHamburgerAddition3("Cheese", 1.12);
		System.out.println("Total Burger Price= "+hamburger.itemizeHamburger()+"\n");
		
		
		HealthyBurger healthyBurger=new HealthyBurger("Beacon", 5.75);
		healthyBurger.addHamburgerAddition1("Egg", 3.00);
		healthyBurger.addHealthyAddition1("Lentils", 9.25);
		System.out.println("Total Price of Healthy burger " + healthyBurger.itemizeHamburger());
		System.out.println("");
		
		DeluxeBurger deluxeBurger=new DeluxeBurger();
		System.out.println("Total price of Deluxe Burger "+ deluxeBurger.itemizeHamburger());
		
	}

}
